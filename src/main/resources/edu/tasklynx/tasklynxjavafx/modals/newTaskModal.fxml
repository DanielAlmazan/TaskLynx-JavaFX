<VBox alignment="CENTER" spacing="10.0" styleClass="secondary" stylesheets="@../../../../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.tasklynx.tasklynxjavafx.controllers.modalsControllers.NewTaskModalController">
    <children>
        <Label alignment="TOP_CENTER" text="New Task" textAlignment="CENTER" />
        <VBox prefHeight="200.0" spacing="10.0" styleClass="container, tertiary" stylesheets="@../../../../css/buttons_style.css">
            <children>
                <VBox minWidth="300.0" spacing="5.0">
                    <children>
                        <Label alignment="TOP_CENTER" text="Task code *" textAlignment="CENTER" />
                        <TextField fx:id="tiCodTrabajo" />
                        <Label styleClass="lblError" fx:id="lblErrCodTrabajo" visible="false" alignment="TOP_CENTER" textAlignment="CENTER" />
                    </children>
                </VBox>
                <VBox minWidth="300.0" spacing="5.0">
                    <children>
                        <Label alignment="TOP_CENTER" text="Category *" textAlignment="CENTER" />
                        <TextField fx:id="tiCategoria" />
                        <Label styleClass="lblError" fx:id="lblErrCategoria" visible="false" alignment="TOP_CENTER" textAlignment="CENTER" />
                    </children>
                </VBox>
                <VBox minWidth="300.0" spacing="5.0">
                    <children>
                        <Label alignment="TOP_CENTER" text="Description *" textAlignment="CENTER" />
                        <TextField fx:id="tiDescripcion" />
                        <Label styleClass="lblError" fx:id="lblErrDescripcion" visible="false" alignment="TOP_CENTER" textAlignment="CENTER" />
                    </children>
                </VBox>
                <VBox minWidth="300.0" spacing="5.0">
                    <children>
                        <Label alignment="TOP_CENTER" text="Start date *" textAlignment="CENTER" />
                  <DatePicker fx:id="dpFecIni" minWidth="300.0" />
                    </children>
                </VBox>
                <VBox minWidth="300.0" spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label alignment="TOP_CENTER" text="Priority *" textAlignment="CENTER" />
                        <ChoiceBox fx:id="cbPrioridad" minWidth="300.0" />
                        <Label styleClass="lblError" fx:id="lblErrPrioridad" visible="false" alignment="TOP_CENTER" textAlignment="CENTER" />
                    </children>
                </VBox>
                <VBox minWidth="300.0" spacing="5.0">
                    <children>
                        <Label alignment="TOP_CENTER" text="Employee assigned" textAlignment="CENTER" />
                        <ChoiceBox fx:id="cbIdTrabajador" minWidth="300.0" />
                        <Label styleClass="lblError" fx:id="lblErrIdTrabajador" visible="false" alignment="TOP_CENTER" textAlignment="CENTER" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <HBox alignment="CENTER" spacing="10.0" styleClass="container, tertiary" stylesheets="@../../../../css/buttons_style.css">
            <children>
                <Button fx:id="btnCreate" onAction="#onCreateTaskBtn" mnemonicParsing="false" styleClass="btn, btn-accept" text="Create task" />
                <Button fx:id="btnCancel" onAction="#onCancelBtn" mnemonicParsing="false" styleClass="btn, btn-danger" text="Cancel" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
