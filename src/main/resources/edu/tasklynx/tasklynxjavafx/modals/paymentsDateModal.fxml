<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10.0" styleClass="secondary" stylesheets="@../../../../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.tasklynx.tasklynxjavafx.controllers.modalsControllers.PaymentsDateModalController">

    <children>
      <HBox prefWidth="233.0" spacing="40.0">
         <children>
            <Label text="STARTING DATE" />
            <Label text="ENDING DATE" />
         </children>
      </HBox>
      <HBox prefWidth="233.0" spacing="20.0">
         <children>
            <DatePicker  fx:id="dpStartingDate"/>
            <DatePicker fx:id="dpEndingDate" />
         </children>
      </HBox>
        <HBox alignment="CENTER" spacing="10.0" styleClass="container,tertiary">
            <children>
                <Button fx:id="btnGeneratePaymentReport" mnemonicParsing="false" onAction="#onGeneratePaymentReportBtn" styleClass="btn,btn-accept" text="GENERATE REPORT" />
                <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#onCancelBtn" styleClass="btn,btn-danger" text="CANCEL" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
